<div id="challenge">
      <div class="jumbotron">
        <h1><%= @challenge.title %></h1>
        <p class="lead"><%= @challenge.story %></p>
      </div>

      <div class="row marketing">
        <div class="col-lg-6">
            <%= image_tag(@challenge.image_location) %>
        </div>

        <div class="col-lg-6">
          <h4>Mission</h4>
          <p><%= @challenge.description %></p>

          <h4>Materials</h4>

          <ul>
             <% @challenge.materials.each do | material | %>
                <li><%= material.content %></li>
            <% end %>
          </ul>

          <h4>Constraints</h4>

          <ul>
             <% @challenge.constraints.each do | constraint | %>
                <li><%= constraint.content %></li>
            <% end %>
          </ul>

            <p class="challenge-btn">

                <!-- Button trigger modal -->
                <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">
                  Need Help?
                </button>

                <!-- Modal -->
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel">Helpful Hint</h4>
                      </div>
                      <div class="modal-body">
                        <p>
                        Hi CreatHER! <br>
                        Try looking up shapes that make up a bridge. <br>
                        <br>
                        Still stuck? Click <a class="links" href="#">here</a> to email a CreatHER who already completed this challenge.
                        </p>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      </div>
                    </div>
                  </div>
                </div>

            </p>
            <p class="challenge-btn">

                <a class="btn btn-lg btn-success" href="<%= challenge_submit_path(challenge_id: @challenge.id) %>" role="button">Submit Now</a>
            </p>
        </div>
      </div>
</div>
